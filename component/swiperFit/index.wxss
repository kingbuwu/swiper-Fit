/*轮播图  */
.swiper-container{
  width: 750rpx;
  position: relative;
  margin-bottom: 10px;
}
.swiper_box {
  width: 100%;
  height:468rpx; 
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:468rpx;
}
swiper {
 height: 468rpx;
}
.slide-image{
  width: 100%;
  display: inline-block;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}
